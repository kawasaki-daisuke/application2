<% if flash[:notice] %>
				<div class="flash">
					<%= flash[:notice] %>
				</div>
			<% end %>

<div class="container">
	<div class="row">
	    <div class="col-md-4">
			<%= render 'books/book', book:@book_new, user: @user %>
		</div>

		<div class="col-md-8">
			
			<h1>Book detail</h1>
			<table class="table">
				<tbody>
					<tr>
						<td><%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg",size:'40x40'  %>
							<br>
							<%= link_to @user.name, user_path(@user.id) %>
						</td>
						<td><%= link_to @book.title, book_path(@book.id) %></td>
						<td><%=@book.body %></td>
						<td><% if current_user.id == @book.user_id %>
							<%= link_to "Edit", edit_book_path(@book.id), class: "btn-sm btn-success" %>
							<%= link_to "Destroy", book_path(@book.id), class: "btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
							<% end %>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
