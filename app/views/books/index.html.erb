<div class="container">
	<div class="row">
		<div class="col-xs-4">
			<%= render 'books/book', book: @book, user: current_user %>
		</div>


		<div class="col-xs-8">

			<h1>Books</h1>

		
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<tbody>
						<% @books.each do |book| %>
							<tr>
								<td><%= attachment_image_tag book.user, :profile_image, :fill, 60 ,60, fallback: "no_image.jpg" %></td>
								<td><%= link_to book.title, book_path(book.id) %></td>
								<td><%= book.body %></td>
							</tr>
						<% end %>

					</tbody>
				</table>
		</div>
	</div>
</div>