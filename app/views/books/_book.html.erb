    <h1>User info</h1>
    <%= attachment_image_tag user, :profile_image, :fill, 60 ,60, format: 'jpg', fallback: "no_image.jpg" %>
    <table class= 'table' >
        <tbody>
            <tr>
                <th>name</th>
                <th><%= user.name %></th>
            </tr>
            <tr>
                <th>introduction</th>
                <th><%= user.introduction %></th>
            </tr>
        </tbody>
    </table>

    <%= link_to "", edit_user_path(user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>

    
    <h1>New Book</h1>
      <%= form_for(book) do |f| %>
        <% if book.errors.any? %>
          <div id= "error-box">
            <h2><%= book.errors.count %>errors prohibited this obj from being saved:</h2>
            <ul>
            <% book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <br>
        <input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book">
      <% end %>

    