<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>Editing Book</h1>
				<%= form_for(@book) do |f| %>
					<% if @book.errors.any? %>
			        	<div id= "error-1">
				            <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
				            <ul>
				            <% @book.errors.full_messages.each do |message| %>
				              <li><%= message %></li>
				            <% end %>
				            </ul>
			        	</div>
			        <% end %>
					<h4>Title</h4>
					<%= f.text_field :title %>
					<h4>Opinion</h4>
					<%= f.text_area :body %>
					<br>
					<%= f.submit "Update book", class: "btn btn-primary col-xs-4" %>
				<% end %>

				<br>
				<br>
				<%= link_to "Show", book_path %>
				|
				<%= link_to "Back", books_path %>
		</div>
		<div class="col-md-3"></div>
	</div>
</div>
