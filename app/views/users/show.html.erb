<h1>Books</h1>
<% @user.books.each do |book| %>

  <%= attachment_image_tag book.user, :profile_image, :fill, 60 ,60, fallback: "no_image.jpg" %>
  <p>Title</p>
  <%= link_to book.title, book_path(book.id) %>
  <p>Opinion</p>
  <%= book.body %>

<% end %>

<% if flash[:notice] %>
	<div class="flash">
		<%= flash[:notice] %>
	</div>
<% end %>

<%= render 'books/book', user: @user, book: @book %>
