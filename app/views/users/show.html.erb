<% if flash[:notice] %>
				<div class="flash">
					<%= flash[:notice] %>
				</div>
<% end %>

<div class="container">
	<div class="row">
	    <div class="col-xs-4">
			<%= render 'books/book', user: @user, book: @book %>
		</div>

		<div class="col-xs-8">
			<h1>Books</h1>
			<table class = 'table'>
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>

				
				<tbody>
					<% @user.books.each do |book| %>
						<tr>
							<td><%= attachment_image_tag book.user, :profile_image, :fill, 60 ,60, fallback: "no_image.jpg" %></td>
							<td><%= link_to book.title, book_path(book.id) %></td>
							<td><%= book.body %></td>
						</tr>
					<% end %>
				</tbody>
				
			</table>
			

			
			
		</div>
	</div>
</div>


