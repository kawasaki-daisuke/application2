<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
          <div id= "error-user">
            <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
            <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

    <% if flash[:notice] %>
      <div class="flash">
      	<%= flash[:notice] %>
      </div>
    <% end %>
 <%= attachment_image_tag @user, :profile_image, :fill, 60 ,60, format: 'jpg', fallback: "no_image.jpg" %>
  
  <h4>Name</h4>
  <%= f.text_field :name %>
  <h4>Image</h4>
  <%= f.attachment_field :profile_image %>
  <h4>Introduction</h4>
  <%= f.text_area :introduction %>
  <%= f.submit 'Update User' %>
<% end %>
